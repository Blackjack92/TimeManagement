             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeManager.ManageProjects.Views"
              xmlns:inf="clr-namespace:TimeManager.Infrastructure;assembly=TimeManager.Infrastructure"
             xmlns:ribbon="clr-namespace:Prism.RibbonRegionAdapter;assembly=TimeManager.Infrastructure"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Ribbon x:Name="MainMenu" x:FieldModifier="protected internal">
        <RibbonTab Header="Module2 Tab">
        </RibbonTab>
        <RibbonTab Header="General (to be merged)"
                 ribbon:UIElementExtension.MergeKey="GeneralTab"
                 ribbon:UIElementExtension.MergeOrder="10">
            <RibbonGroup Header="Group 4">
                <RibbonButton Label="Group4.Button1 (Module2)" />
                <RibbonButton Label="Group4.Button2 (Module2)" />
                <RibbonButton Label="Group4.Button3 (Module2)" />
            </RibbonGroup>
        </RibbonTab>
    </Ribbon>
</UserControl>
